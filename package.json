{
  "name": "sundaram",
  "scripts": {
    "dev": "bun run build:css && bun --hot src/index.tsx",
    "build:css": "bunx tailwindcss -i ./src/styles/main.css -o ./public/output.css",
    "watch:css": "bunx tailwindcss -i ./src/styles/main.css -o ./public/output.css --watch",
    "start": "bun run build:css && bun src/index.tsx"
  },
  "dependencies": {
    "hono": "^4.10.3",
    "htmx.org": "^2.0.8",
    "pocketbase": "^0.26.2"
  },
  "devDependencies": {
    "@tailwindcss/cli": "^4.1.16",
    "@types/bun": "latest",
    "bun-types": "^1.3.1",
    "tailwindcss": "^4.1.16"
  }
}